<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Practica.Views"
             x:Class="Practica.Views.EditPersonaje">

    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Name}" Placeholder="Name"/>
            <Entry Text="{Binding Status}" Placeholder="Status"/>
            <Entry Text="{Binding Species}" Placeholder="Species"/>
            <Entry Text="{Binding Gender}" Placeholder="Gender"/>
            <Entry Text="{Binding Image}" Placeholder="Image URL"/>
            <Button Text="Save" Clicked="SaveButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>